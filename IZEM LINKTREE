  <script>
    // مثال لإضافة رابط ديناميكي
    const linksDiv = document.querySelector('.links');

    function addLink(name, url, iconClass) {
      const a = document.createElement('a');
      a.href = url;
      a.target = "_blank";
      if(iconClass){
        const i = document.createElement('i');
        i.className = iconClass;
        a.appendChild(i);
      }
      const text = document.createTextNode(name);
      a.appendChild(text);
      linksDiv.appendChild(a);
    }

    // إضافة رابط جديد
    addLink("Official Website", "https://www.inzayn.com", "fas fa-globe");
  </script>
